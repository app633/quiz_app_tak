<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memory Test"
        android:textSize="50sp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ver 2020/04/03"
        android:textSize="20sp"
        android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:onClick="startSettingActivity"
            android:text="テスト開始"
            android:textSize="30sp"
            />

        <Button
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:onClick="startListActivity"
            android:text="一覧表示"
            android:textSize="30sp"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:onClick="startManualActivity"
            android:text="使い方"
            android:textSize="20sp" />

        <Button
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:text="CSVファイルを読み込む"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:onClick="importCSV"/>

    </LinearLayout>

</ScrollView>
